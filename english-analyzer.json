// PUT /pages_en
{
  "settings": {
    "analysis": {
      "filter": {
        "english_stop": {
          "type":       "stop",
          "stopwords": "_english_"
        }
      },
      "analyzer": {
        "rebuilt_english": {
          "tokenizer":  "standard",
          "filter": [
            "lowercase",
            "english_stop",
            "porter_stem",
            "asciifolding"
          ]
        },
        "english_exact": {
          "tokenizer":  "standard",
          "filter": [
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "name": {
        "type": "text",
        "analyzer": "rebuilt_english",
        "fields": {
          "exact": {
            "type": "text",
            "analyzer": "english_exact"
          },
          "raw": {
            "type": "keyword"
          }
        }
      },
      "content": {
        "type": "text",
        "analyzer": "rebuilt_english",
        "fields": {
          "exact": {
            "type": "text",
            "analyzer": "english_exact"
          }
        }
      },
      "category": {
        "type": "text",
        "analyzer": "whitespace",
        "fields": {
          "raw": {
            "type": "keyword"
          }
        }
      },
      "tags": {
        "type": "keyword"
      }
    }
  }
}